<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorButtonNormal">@drawable/button_color_state</item>
        <item name="android:buttonStyle">@style/AppButtonStyle</item>
        <item name="colorAccent">@color/accent</item>
    </style>


    <style name="BorderlessButton" parent="android:Widget.DeviceDefault.Light.Button.Borderless.Small">
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:textColor">@color/w_title</item>
    </style>
</resources>